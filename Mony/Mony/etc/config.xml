<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <mony_mony>
                <active>0</active>
                <title>Mony Payment</title>
                <api_mode>sandbox</api_mode>
                <model>Mony\Mony\Model\Payment</model>
                <payment_action>authorize_capture</payment_action>
                <merchant_secret backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <save_cards>0</save_cards>
                <allowspecific>1</allowspecific>
                <specificcountry>AU</specificcountry>
                <cctypes>AE,VI,MC,DI,JCB</cctypes>
            </mony_mony>
        </payment>
    </default>
</config>